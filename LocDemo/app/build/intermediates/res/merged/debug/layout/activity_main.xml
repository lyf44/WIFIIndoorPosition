<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <SurfaceView
            android:id="@+id/surfaceView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
            <!--android:scaleType="matrix" -->

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:background="@color/bright_foreground_material_dark"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:layout_gravity="bottom|left" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_retryCounter"
            android:background="@color/bright_foreground_material_dark"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:layout_gravity="bottom|right" />

        <TextView
            android:id="@+id/textView_timeCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:background="@color/bright_foreground_material_dark"
            android:text="0"
            android:textColor="@color/abc_input_method_navigation_guard" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_stayCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_weight="1"
                android:background="@color/bright_foreground_material_dark"
                android:text="0"
                android:textColor="@color/abc_input_method_navigation_guard" />

            <TextView
                android:id="@+id/textView_walkStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_weight="1"
                android:background="@color/bright_foreground_material_dark"
                android:clickable="false"
                android:text="0"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView_walkEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_weight="1"
                android:background="@color/bright_foreground_material_dark"
                android:clickable="false"
                android:text="0"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textView_WIFIUpdateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_weight="1"
                android:background="@color/bright_foreground_material_dark"
                android:clickable="false"
                android:text="0"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:visibility="invisible" />

        </LinearLayout>


    </FrameLayout>
    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:choiceMode="singleChoice"
        android:background="@color/bright_foreground_inverse_material_light"/>
</android.support.v4.widget.DrawerLayout>